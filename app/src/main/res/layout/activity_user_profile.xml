<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserProfileActivity"
    android:background="@color/light_grey">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            app:navigationIcon="?attr/homeAsUpIndicator"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="#5cc09f">




            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:id="@+id/image_view_profile"
                android:layout_centerInParent="true"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.CircularImageView"
                android:background="@drawable/no_profile_pic"/>
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/show_welcome"
                android:layout_below="@id/image_view_profile"
                android:hint="Loading..."
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:textColor="@color/white"/>
        </RelativeLayout>
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="15dp"
            android:layout_margin="15dp"
            android:background="@color/white">

            <!--- show name -->
            
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:id="@+id/profile_ic"
                android:background="@drawable/ic_profile" />
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/show_full_name"
                android:layout_alignStart="@id/profile_ic"
                android:hint="Loading"
                android:layout_marginStart="50dp"
                android:textSize="18sp"/>
            
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:id="@+id/divider_name"
                android:layout_below="@id/show_full_name"
                android:background="@color/dark_grey"/>

            <!--- show email -->

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:id="@+id/email_ic"
                android:background="@drawable/ic_email"
                android:layout_below="@+id/divider_name"
                android:layout_marginTop="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/show_email"
                android:layout_alignStart="@id/email_ic"
                android:hint="Loading"
                android:layout_marginStart="50dp"
                android:textSize="18sp"
                android:layout_below="@id/divider_name"
                android:layout_marginTop="20dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:id="@+id/divider_email"
                android:layout_below="@id/show_email"
                android:background="@color/dark_grey"/>

            <!--- show dob -->

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:id="@+id/dob_ic"
                android:background="@drawable/ic_birthday"
                android:layout_below="@+id/divider_email"
                android:layout_marginTop="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/show_dob"
                android:layout_alignStart="@id/dob_ic"
                android:hint="Loading"
                android:layout_marginStart="50dp"
                android:textSize="18sp"
                android:layout_below="@id/divider_email"
                android:layout_marginTop="20dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:id="@+id/divider_dob"
                android:layout_below="@id/show_dob"
                android:background="@color/dark_grey"/>

            <!--- show gender -->

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:id="@+id/gender_ic"
                android:background="@drawable/ic_gender"
                android:layout_below="@+id/divider_dob"
                android:layout_marginTop="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/show_gender"
                android:layout_alignStart="@id/gender_ic"
                android:hint="Loading"
                android:layout_marginStart="50dp"
                android:textSize="18sp"
                android:layout_below="@id/divider_dob"
                android:layout_marginTop="20dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="20dp"
                android:id="@+id/divider_gender"
                android:layout_below="@id/show_gender"
                android:background="@color/dark_grey"/>

            <!--- show mobile -->

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:id="@+id/mobile_ic"
                android:background="@drawable/ic_mobile"
                android:layout_below="@+id/divider_gender"
                android:layout_marginTop="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/show_mobile"
                android:layout_alignStart="@id/mobile_ic"
                android:hint="Loading"
                android:layout_marginStart="50dp"
                android:textSize="18sp"
                android:layout_below="@id/divider_gender"
                android:layout_marginTop="20dp"/>


        </RelativeLayout>

        <ProgressBar
            android:id="@+id/progressbar"
            android:layout_width="72dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="150dp"
            android:layout_marginVertical="170dp"
            android:elevation="10dp"
            android:visibility="gone"/>

    </LinearLayout>

</ScrollView>