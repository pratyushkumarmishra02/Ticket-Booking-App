<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ForgotPasswordActivity"
    android:background="@drawable/destop">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:padding="15dp"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                app:navigationIcon="?attr/homeAsUpIndicator"
                app:popupTheme="@style/AppTheme.PopupOverlay" />

        
        <TextView
            android:id="@+id/textview_reset_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Please enter the registered email to get the reset link "
            android:layout_marginTop="30dp"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"/>
        
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textview_reset_email"
            android:layout_below="@id/textview_reset_header"
            android:layout_marginTop="50dp"
            android:text="Email*"
            android:textColor="#555555"
            android:textSize="16sp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edittext_reset_email"
            android:inputType="text|textEmailAddress|textAutoComplete|textAutoCorrect"
            android:hint="Enter your email here"
            android:layout_below="@+id/textview_reset_email" />
        
        <Button
            android:id="@+id/button_reset_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edittext_reset_email"
            android:hint="Reset Password"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="70dp" />

        <ProgressBar
            android:id="@+id/pb"
            android:layout_width="72dp"
            android:layout_height="wrap_content"
            style="?android:attr/progressBarStyleLarge"
            android:layout_centerVertical="true"
            android:layout_marginHorizontal="150dp"
            android:layout_marginVertical="170dp"
            android:elevation="10dp"
            android:visibility="gone"/>

        </LinearLayout>
        

    </RelativeLayout>
</ScrollView>