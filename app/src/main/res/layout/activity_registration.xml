<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/destop"
    tools:context=".registration">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:navigationIcon="?attr/homeAsUpIndicator"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="55dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/roundstyle"
            android:orientation="vertical"
            android:padding="7dp">

            <!-- Heading -->
            <TextView
                android:id="@+id/heading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Register Here"
                android:textColor="#000000"
                android:textSize="24sp"
                android:textStyle="bold" />

            <!-- Full Name -->
            <TextView
                android:id="@+id/for_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Full Name*"
                android:textColor="#000000"
                android:textSize="24sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/full_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Your Name"
                android:inputType="text"
                android:textColor="#000000"
                android:textColorHint="#666666"
                android:textStyle="bold" />

            <!-- Email -->
            <TextView
                android:id="@+id/for_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email*"
                android:textColor="#000000"
                android:textSize="24sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/email_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Your Email"
                android:inputType="textEmailAddress"
                android:textColor="#000000"
                android:textColorHint="#666666"
                android:textStyle="bold" />

            <!-- Phone Number -->
            <TextView
                android:id="@+id/for_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Phone Number*"
                android:textColor="#000000"
                android:textSize="24sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/phone_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Your 10 digit phone number(+91)"
                android:inputType="number"
                android:textColor="#000000"
                android:textColorHint="#666666"
                android:textStyle="bold" />

            <!-- Gender -->
            <TextView
                android:id="@+id/for_gender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gender*"
                android:textColor="#000000"
                android:textSize="24sp"
                android:textStyle="bold" />

            <RadioGroup
                android:id="@+id/for_radio_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radio_female"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Female"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <RadioButton
                    android:id="@+id/radio_male"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="Male"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </RadioGroup>

            <!-- User Type -->
            <TextView
                android:id="@+id/for_user_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="User Type*"
                android:textColor="#000000"
                android:textSize="24sp"
                android:textStyle="bold" />

            <RadioGroup
                android:id="@+id/user_type_radio_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radio_normal_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Normal User"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <RadioButton
                    android:id="@+id/radio_admin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="Admin"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </RadioGroup>

            <!-- Date of Birth -->
            <TextView
                android:id="@+id/for_dob"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select Date of Birth (dd/mm/yyyy)*"
                android:textColor="#000000"
                android:textSize="24sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/dob"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Select Your Date of Birth (dd/mm/yyyy)"
                android:focusable="false"
                android:clickable="true"
                android:textColor="#000000"
                android:textColorHint="#666666"
                android:textStyle="bold" />

            <!-- Password -->
            <TextView
                android:id="@+id/for_pwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Password*"
                android:textColor="#000000"
                android:textSize="24sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password"
                android:inputType="textPassword"
                android:textColor="#000000"
                android:textColorHint="#666666"
                android:textStyle="bold" />

            <!-- Confirm Password -->
            <TextView
                android:id="@+id/for_cpwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Confirm Password*"
                android:textColor="#000000"
                android:textSize="24sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/cpassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Confirm Password"
                android:inputType="textPassword"
                android:textColor="#000000"
                android:textColorHint="#666666"
                android:textStyle="bold" />

            <!-- Registration Button -->
            <Button
                android:id="@+id/button"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginTop="15dp"
                android:layout_gravity="center"
                android:background="@drawable/color_shape"
                android:text="Registration"
                android:textColor="#FFFFFF" />

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone" />

            <!-- Existing Account -->
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/for_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Do you have an existing account?"
                    android:layout_marginTop="30dp"
                    android:textColor="#000000"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/_login"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Login"
                    android:textColor="#C81010"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_toRightOf="@+id/for_login"
                    android:layout_marginLeft="7dp"
                    android:layout_marginTop="30dp" />
            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>
</ScrollView>
