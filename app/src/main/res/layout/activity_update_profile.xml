<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserProfileActivity"
    android:background="@drawable/destop">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            app:navigationIcon="?attr/homeAsUpIndicator"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:padding="15dp">

            <TextView
                android:id="@+id/textview_reset_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="You can update your pprofile details now! "
                android:layout_marginTop="10dp"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView_full_name"
                android:layout_below="@id/textview_reset_header"
                android:text="Name"
                android:layout_marginTop="10dp"
                android:textSize="18sp"/>

            <EditText
                android:id="@+id/editText_update_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView_full_name"
                android:layout_marginTop="10dp"
                android:hint="Enter your name"
                android:inputType="text"
                android:minHeight="48dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView_Update_dob"
                android:layout_below="@id/editText_update_name"
                android:text="Date Of Birth"
                android:layout_marginTop="10dp"
                android:textSize="18sp"/>

            <EditText
                android:id="@+id/editText_update_dob"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView_Update_dob"
                android:layout_marginTop="10dp"
                android:hint="Enter your DOB"
                android:inputType="date"
                android:minHeight="48dp" />


            <TextView
                android:id="@+id/for_gender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gender"
                android:layout_below="@id/editText_update_dob"
                android:textSize="18sp" />

            <RadioGroup
                android:id="@+id/for_radio_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/for_gender"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radio_female"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Female"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <RadioButton
                    android:id="@+id/radio_male"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="1dp"
                    android:text="Male"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </RadioGroup>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView_Update_mobile"
                android:layout_below="@id/for_radio_button"
                android:text="Phone Number"
                android:layout_marginTop="10dp"
                android:textSize="18sp"/>

            <EditText
                android:id="@+id/editText_update_mobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView_Update_mobile"
                android:layout_marginTop="10dp"
                android:hint="Enter your Phone Number"
                android:inputType="number"
                android:minHeight="48dp" />

            <Button
                android:id="@+id/button_update_pic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editText_update_mobile"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:backgroundTint="@color/ocean_blue"
                android:text="Update Profile Pic"
                android:textColor="#FFFFFF"/>

            <Button
                android:id="@+id/button_update_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/button_update_pic"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:backgroundTint="@color/Red"
                android:text="Update Email"
                android:textColor="#FFFFFF"/>

            <Button
                android:id="@+id/button_update_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/button_update_email"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:text="Update profile"
                android:textColor="#FFFFFF"/>

            <ProgressBar
                android:id="@+id/pb"
                android:layout_width="72dp"
                android:layout_height="wrap_content"
                style="?android:attr/progressBarStyleLarge"
                android:layout_centerVertical="true"
                android:layout_marginHorizontal="150dp"
                android:layout_marginVertical="170dp"
                android:elevation="10dp"
                android:visibility="gone"/>


        </RelativeLayout>
    </LinearLayout>
</ScrollView>