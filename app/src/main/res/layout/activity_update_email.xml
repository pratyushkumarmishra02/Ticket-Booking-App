<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpdateEmailActivity"
    android:background="@drawable/destop">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        app:navigationIcon="?attr/homeAsUpIndicator"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/AppTheme.PopupOverlay" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:padding="15dp">

        <TextView
            android:id="@+id/textview_reset_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="You can update your email now! "
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_current_password"
            android:layout_below="@id/textview_reset_header"
            android:text="Current Password"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:textSize="18sp"/>

        <EditText
            android:id="@+id/editText_current_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView_current_password"
            android:layout_marginTop="10dp"
            android:hint="Enter your current password"
            android:inputType="textPassword"
            android:minHeight="48dp" />
        <ImageView
            android:id="@+id/eyeIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="92dp"
            android:layout_marginEnd="7dp"
            android:padding="8dp"
            android:src="@drawable/baseline_visibility_off_24" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_new_email"
            android:layout_below="@id/editText_current_password"
            android:text="New Email"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:textSize="18sp"/>

        <EditText
            android:id="@+id/editText_new_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView_new_email"
            android:layout_marginTop="10dp"
            android:hint="Enter your new email"
            android:inputType="text|textEmailAddress"
            android:minHeight="48dp" />

    <Button
        android:id="@+id/button_update_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Update Email"
        android:padding="16dp"
        android:layout_below="@+id/editText_new_email"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="50dp"/>

        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="72dp"
            android:layout_height="wrap_content"
            style="?android:attr/progressBarStyleLarge"
            android:layout_centerVertical="true"
            android:layout_marginHorizontal="150dp"
            android:layout_marginVertical="170dp"
            android:elevation="10dp"
            android:visibility="gone"/>

</RelativeLayout>
    </LinearLayout>

</ScrollView>
